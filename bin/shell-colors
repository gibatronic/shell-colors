#!/usr/bin/env bash

get_library_path() {
  echo "$(cd "$(dirname "$0")/../lib"; pwd -P)/shell-colors"
}

show_help() {
  echo ''
  echo '  Usage:'
  echo "    $0 <command>"
  echo ''
  echo '  Commands:'
  echo '    help          show this message'
  echo '    library-path  get the library'"'"'s path to source it'
  echo ''
}

case "$1" in
  library-path)
    get_library_path
    ;;
  *)
    show_help
    exit 1
esac
